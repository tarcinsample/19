<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- List View -->
        <record id="view_op_student_list" model="ir.ui.view">
            <field name="name">op.student.list</field>
            <field name="model">op.student</field>
            <field name="arch" type="xml">
                <list string="Students">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="mobile"/>
                    <field name="registration_number"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_op_student_form" model="ir.ui.view">
            <field name="name">op.student.form</field>
            <field name="model">op.student</field>
            <field name="arch" type="xml">
                <form string="Student">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(charge_erp_core.session_list_action)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-calendar"
                                context="{'search_default_attendee_ids': id}">
                                <field name="session_count" widget="statinfo" string="Sessions"/>
                            </button>
                        </div>
                        <field name="image_1920" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Student's Name"/>
                            </h1>
                        </div>
                        <notebook>

                            <!-- Personal Information -->
                            <page string="Personal Information">
                                <group>
                                    <group>
                                        <field name="gender"/>
                                        <field name="birth_date"/>
                                        <field name="blood_group"/>
                                    </group>
                                    <group>
                                        <field name="nationality"/>
                                        <field name="visa_info"/>
                                        <field name="is_an_alumni"/>
                                    </group>
                                </group>
                            </page>

                            <!-- Contact Information -->
                            <page string="Contact Information">
                                <group>
                                    <field name="phone"/>
                                    <field name="mobile"/>
                                    <field name="email"/>
                                    <field name="emergency_contact_id"/>
                                </group>
                                <label for="street"/>
                                <div class="o_address_format">
                                    <field name="street"/>
                                    <field name="street2"/>
                                    <field name="city"/>
                                    <field name="state_id"/>
                                    <field name="zip"/>
                                    <field name="country_id"/>
                                </div>
                            </page>

                            <!-- Family Information -->
                            <page string="Family Information">
                                <field name="parent_ids" widget="many2many_tags"/>
                            </page>

                            <!-- Other Information -->
                            <page string="Other Information">
                                <group>
                                    <field name="registration_number"/>
                                    <field name="id_number"/>
                                    <field name="library_card"/>
                                    <field name="badge_id"/>
                                    <field name="category"/>
                                    <field name="user_id"/>
                                    <field name="batch_id"/>
                                    <field name="program_id"/>
                                    <field name="miscellaneous"/>
                                </group>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_op_student" model="ir.actions.act_window">
            <field name="name">Students</field>
            <field name="res_model">op.student</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_op_student" name="Students"
                  parent="menu_op_school_root"
                  action="action_op_student"
                  sequence="10"/>

    </data>
</odoo>

