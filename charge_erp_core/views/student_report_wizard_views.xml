<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Form View for Student Report Wizard -->
        <record id="view_student_report_wizard_form" model="ir.ui.view">
            <field name="name">student.report.wizard.form</field>
            <field name="model">student.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Student Report Wizard">
                    <group>
                        <field name="course_id"/>
                    </group>
                    <footer>
                        <button name="action_print_report" string="Print Report" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action for Student Report Wizard -->
        <record id="action_student_report_wizard" model="ir.actions.act_window">
            <field name="name">Students by Course</field>
            <field name="res_model">student.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- Reporting Menu -->
        <menuitem id="menu_op_reporting_root" name="Reporting"
                  parent="menu_op_school_root"
                  sequence="90"/>

        <!-- Menu for Student Report -->
        <menuitem id="menu_op_student_report" name="Students by Course"
                  parent="menu_op_reporting_root"
                  action="action_student_report_wizard"
                  sequence="10"/>

    </data>
</odoo>
