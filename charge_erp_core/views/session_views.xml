<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Form View -->
        <record model="ir.ui.view" id="session_form_view">
            <field name="name">session.form</field>
            <field name="model">op.session</field>
            <field name="arch" type="xml">
                <form string="Session Form">
                    <header>
                        <button name="%(charge_erp_core.action_op_attendee_wizard)d"
                                type="action"
                                string="Add Attendees"
                                class="oe_highlight"
                                context="{'default_session_id': id}"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="faculty_ids" widget="many2many_tags"/>
                            <field name="course_id"/>
                            <field name="academic_year_id"/>
                            <field name="start_date"/>
                            <field name="duration"/>
                            <field name="seats"/>
                        </group>
                        <notebook>
                            <page string="Attendees">
                                <field name="attendee_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List View -->
        <record model="ir.ui.view" id="session_list_view">
            <field name="name">session.list</field>
            <field name="model">op.session</field>
            <field name="arch" type="xml">
                <list string="Session List">
                    <field name="name"/>
                    <field name="course_id"/>
                    <field name="academic_year_id"/>
                </list>
            </field>
        </record>

        <!-- Calendar View -->
        <record model="ir.ui.view" id="session_calendar_view">
            <field name="name">session.calendar</field>
            <field name="model">op.session</field>
            <field name="arch" type="xml">
                <calendar string="Session Calendar" date_start="start_date" color="course_id">
                    <field name="name"/>
                </calendar>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="session_list_action">
            <field name="name">Sessions</field>
            <field name="res_model">op.session</field>
            <field name="view_mode">list,form,calendar</field>
        </record>

        <!-- Menu Item -->
        <menuitem id="session_menu" name="Sessions" parent="charge_erp_core.menu_op_school_root"
                  action="session_list_action" sequence="21"/>

    </data>
</odoo>