<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_student_list_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Students for Course: <span t-esc="course_name"/></h2>
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Registration Number</th>
                                    <th>Batch</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="students" t-as="student">
                                    <td><span t-field="student.name"/></td>
                                    <td><span t-field="student.email"/></td>
                                    <td><span t-field="student.registration_number"/></td>
                                    <td><span t-field="student.batch_id.name"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
